{% extends 'admin/admin_dashboard.html.twig' %}

{% block title %}Gestion des Stocks{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="mb-4">
        <h1 class="h3">
            <i class="bi bi-droplet-fill text-danger"></i> Gestion des Stocks de Sang
        </h1>
        <p class="text-muted">Mettez à jour les niveaux de stock en temps réel</p>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

   <!-- Tableau de mise à jour des stocks -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-pencil-square"></i> Mise à Jour des Stocks
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th width="20%">Groupe Sanguin</th>
                            <th width="25%">Niveau Actuel</th>
                            <th width="30%">Mettre à Jour</th>
                            <th width="15%">Statut</th>
                            <th width="10%">Dernière MAJ</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for stock in stocks %}
                        {% if stock.niveauAlerte == 'critique' %}
                            {% set badge_class = 'bg-danger' %}
                            {% set row_class = 'table-danger' %}
                        {% elseif stock.niveauAlerte == 'faible' %}
                            {% set badge_class = 'bg-warning text-dark' %}
                            {% set row_class = 'table-warning' %}
                        {% else %}
                            {% set badge_class = 'bg-success' %}
                            {% set row_class = '' %}
                        {% endif %}

                        <tr class="{{ row_class }}">
                            <td>
                                <h5 class="mb-0">
                                    <i class="bi bi-droplet-fill text-danger"></i> 
                                    <strong>{{ stock.groupeSanguin }}</strong>
                                </h5>
                            </td>
                            <td>
                                <h4 class="mb-0 text-primary">{{ stock.niveauActuel }} unités</h4>
                            </td>
                            <td>
                                <form method="post" action="{{ path('app_stock_update', {'id': stock.id}) }}" class="d-flex align-items-center">
                                    <input type="hidden" name="_token" value="{{ csrf_token('update' ~ stock.id) }}">
                                    <div class="input-group" style="max-width: 250px;">
                                        <input type="number" 
                                               name="niveau" 
                                               class="form-control" 
                                               value="{{ stock.niveauActuel }}" 
                                               min="0" 
                                               required
                                               placeholder="Nouveau niveau">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-lg"></i> Valider
                                        </button>
                                    </div>
                                </form>
                            </td>
                            <td>
                                <span class="badge {{ badge_class }} text-uppercase px-3 py-2">
                                    {{ stock.niveauAlerte }}
                                </span>
                            </td>
                            <td>
                                {% if stock.dernierMiseAJour %}
                                    <small>{{ stock.dernierMiseAJour|date('d/m/Y') }}</small><br>
                                    <small class="text-muted">{{ stock.dernierMiseAJour|date('H:i') }}</small>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                <p>Aucun stock disponible dans la base de données.</p>
                                <p class="text-muted small">Les stocks doivent être initialisés dans la base de données.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}