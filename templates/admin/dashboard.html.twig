{% extends 'admin/admin_dashboard.html.twig' %}

{% block content %}
<div class="row justify-content-center">
    <!-- Donateurs inscrits  -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-header text-white text-center py-3" style="background-color: #f87171;">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i>Donateurs</h5>
            </div>
            <div class="card-body text-center p-4">
                <div class="display-4 font-weight-bold mb-2" style="color: #dc2626;">
                    {{ stats.totalDonateurs }}
                </div>
                <p class="text-muted mb-0">
                    {% if stats.totalDonateurs == 20 %}
                        (20 Donateurs)
                    {% else %}
                        Total inscrits
                    {% endif %}
                </p>
            </div>
        </div>
    </div>

    <!-- Stock Critique -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-header text-white text-center py-3" style="background-color: #dc2626;">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Stock Critique</h5>
            </div>
            <div class="card-body text-center p-4">
                <div class="display-4 font-weight-bold mb-2" style="color: #991b1b;">
                    {{ stats.stockCritique }}
                </div>
                <p class="text-muted mb-0">Stocks en niveau critique</p>
            </div>
        </div>
    </div>

    <!-- RDV à Valider  -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-header text-white text-center py-3" style="background-color: #f87171;">
                <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>RDV à Valider</h5>
            </div>
            <div class="card-body text-center p-4">
                <div class="display-4 font-weight-bold mb-2" style="color: #dc2626;">
                    {{ stats.rdvAVALIDER }}
                </div>
                <p class="text-muted mb-0">RDV confirmés en attente</p>
            </div>
        </div>
    </div>
</div>

<!-- Détail des Stocks Critiques -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0 text-danger">
                    <i class="fas fa-tint me-2"></i>
                    Stocks Critiques ({{ stocksCritiques|length }})
                </h5>
            </div>
            <div class="card-body">
                {% if stocksCritiques|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Groupe Sanguin</th>
                                    <th>Niveau Actuel</th>
                                    <th>Statut</th>
                                    <th>Dernière Mise à Jour</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for stock in stocksCritiques %}
                                <tr>
                                    <td class="font-weight-bold">{{ stock.groupeSanguin }}</td>
                                    <td>
                                        <span class="badge badge-danger py-2 px-3">
                                            {{ stock.niveauActuel }} L
                                        </span>
                                    </td>
                                    <td class="text-danger">
                                        <i class="fas fa-exclamation-circle me-1"></i>
                                        {{ stock.niveauAlerte }}
                                    </td>
                                    <td class="text-muted">
                                        {% if stock.dernierMiseAJour %}
                                            <small>
                                                <i class="fas fa-calendar me-1"></i>
                                                {{ stock.dernierMiseAJour|date('d/m/Y') }}
                                            </small>
                                        {% else %}
                                            <small class="text-muted">N/A</small>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle text-success fa-2x mb-3"></i>
                        <p class="text-muted mb-0">Aucun stock critique - tous les niveaux sont bons!</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Informations de mise à jour -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <small class="text-muted">
                    <i class="fas fa-sync-alt me-1"></i>
                    Dernière actualisation: {{ "now"|date('d/m/Y') }}
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}