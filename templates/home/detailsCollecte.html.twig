{% block stylesheets %}
<style>
/* ======= CONTAINER DE DÉTAILS ======= */
.details-container {
    background: #fff;
    padding: 30px 35px;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    max-width: 600px;
    width: 100%;
    margin: 40px auto; /* centre horizontalement dans la page */
    text-align: left;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.details-container:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.15);
}

/* ======= TEXTE ======= */
.card-text {
    font-size: 1rem;
    color: #333;
    margin-bottom: 12px;
    line-height: 1.5;
    padding-left: 10px;
    border-left: 4px solid #dc3545;
}

/* ======= BOUTON RENDEZ-VOUS ======= */
.card-btn {
    display: inline-block;
    background-color: #dc3545;
    color: #fff;
    font-weight: 600;
    padding: 12px 28px;
    border-radius: 30px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1rem;
    margin-top: 20px;
}

.card-btn:hover {
    background-color: #b52a37;
    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(181,42,55,0.4);
}

/* ======= RESPONSIVE ======= */
@media (max-width: 768px) {
    .details-container {
        padding: 25px;
        margin: 20px auto;
    }

    .card-btn {
        width: 100%;
    }
}
</style>
{% endblock %}


{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow details-container border-0">
                <div class="card-header bg-danger text-white text-center rounded-top">
                    <h3 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Détail de la Collecte</h3>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Date début :</strong> {{ collectById.dateDebut|date('d/m/Y') }}</p>
                    <p class="card-text"><strong>Date fin :</strong> {{ collectById.dateFin|date('d/m/Y') }}</p>
                    <p class="card-text"><strong>Nom lieu :</strong> {{ collectById.lieu.nomLieu }}</p>
                    <p class="card-text"><strong>Adresse :</strong> {{ collectById.lieu.adresse }}</p>
                    <p class="card-text"><strong>Capacité Maximale :</strong> {{ collectById.capaciteMaximale }}</p>
                    <p class="card-text"><strong>Statut :</strong> <span class="badge bg-{{ collectById.statut == 'Active' ? 'success' : 'secondary' }}">{{ collectById.statut }}</span></p>
                    <p class="card-text"><strong>Ville :</strong> {{ collectById.lieu.ville }}</p>
                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="btn btn-danger btn-lg card-btn">
                            <i class="bi bi-calendar-plus me-1"></i> Prendre Rendez-vous
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
