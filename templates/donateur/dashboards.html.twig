<!DOCTYPE html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Font Nunito -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <!-- CSS Stylesheet -->
    <link rel="stylesheet" type="text/css" href="{{ asset('themes/css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('themes/css/fonts.css') }}">
    <link rel="shortcut icon" href="{{ asset('themes/imgs/favicon.ico') }}">
    
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('themes/css/dashboard.css') }}">
    {% endblock %}
    
    <title>{% block title %}Blood Bank - Mon Dashboard{% endblock %}</title>
</head>

<body>

    <!-- Navbar -->
    <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-light fixed-top py-0">
        <div class="container">
            <a href="{{ path('Accueil') }}" class="img-fluid navbar-brand">
                <img src="{{ asset('themes/imgs/nav-logo.png') }}" class="img-hover">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="justify-content-end collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item pr-2">
                        <a href="{{ path('Accueil') }}" class="nav-link {{ app.request.attributes.get('_route') == 'Accueil' ? 'active' : '' }}">Accueil</a>
                    </li>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item pr-2">
                                <a href="{{ path('admin_dashboard') }}" class="nav-link">Dashboard Admin</a>
                            </li>
                        {% else %}
                            <li class="nav-item pr-2">
                                <a href="{{ path('donateur_dashboard') }}" class="nav-link active">Mon Dashboard</a>
                            </li>
                        {% endif %}
                        <li class="nav-item pr-2">
                            <a href="{{ path('app_logout') }}" class="nav-link">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item pr-2">
                            <a href="{{ path('app_login') }}" class="nav-link">Connexion</a>
                        </li>
                        <li class="nav-item pr-2">
                            <a href= "{{ path('app_new_donateur') }}" class="nav-link">S'inscrire</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    {% block body %}
    <div class="container mt-5 pt-5">
        
        <!-- ==== HEADER ==== -->
        <div class="dashboard-header mb-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="welcome-title">
                        <i class="fas fa-heartbeat text-primary mr-2"></i>
                        Bonjour {{ user.prenom }} !
                    </h1>
                    <p class="text-muted mb-0">Bienvenue sur votre espace personnel</p>
                </div>
                <div class="col-md-4 text-right">
                    <form action="{{ path('app_logout') }}" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt mr-2"></i>Déconnexion
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ==== FLASH MESSAGES ==== -->
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- ==== ÉLIGIBILITÉ ==== -->
        <div class="card elig-card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-chart-bar text-primary mr-2"></i>
                    Votre Éligibilité au Don de Sang
                </h3>
            </div>
            <div class="card-body">
                {% if eligibilite.eligible %}
                    <div class="alert alert-success elig-ok">
                        <i class="fas fa-check-circle mr-2"></i>
                        {{ eligibilite.message }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Dernier don :</strong>
                                {{ user.derniereDateDon ? user.derniereDateDon|date('d/m/Y') : 'Jamais' }}
                            </p>
                        </div>
                        <div class="col-md-6 text-right">
                            <span class="badge badge-success badge-lg">Éligible</span>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-warning elig-no">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        {{ eligibilite.message }}
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <p><strong>Dernier don :</strong><br>
                                {{ user.derniereDateDon|date('d/m/Y') }}
                            </p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Prochaine date possible :</strong><br>
                                {{ eligibilite.prochaineDate|date('d/m/Y') }}
                            </p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Jours restants :</strong><br>
                                <span class="badge badge-info">{{ eligibilite.joursRestants }} jour(s)</span>
                            </p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- ==== RENDEZ-VOUS ==== -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h2 class="card-title mb-0">
                    <i class="fas fa-calendar-alt text-primary mr-2"></i>
                    Mes Rendez-Vous
                </h2>
            </div>
            <div class="card-body">
                {% if ListRendezVous is empty %}
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">Aucun rendez-vous trouvé</h4>
                        <p class="text-muted">Vous n'avez pas encore pris de rendez-vous pour un don.</p>
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Date Rendez-vous</th>
                                    <th>Statut</th>
                                    <th>Lieu</th>
                                    <th>Nom collecte</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rdv in ListRendezVous %}
                                    <tr>
                                        <td>
                                            <i class="far fa-calendar mr-2 text-muted"></i>
                                            {{ rdv.dateHeureDebut ? rdv.dateHeureDebut|date('d/m/Y H:i') : '' }}
                                        </td>
                                        <td>
                                            {% if rdv.statut == 'Confirmé' %}
                                                <span class="badge badge-success">{{ rdv.statut }}</span>
                                            {% elseif rdv.statut == 'En attente' %}
                                                <span class="badge badge-warning">{{ rdv.statut }}</span>
                                            {% elseif rdv.statut == 'Annulé' %}
                                                <span class="badge badge-danger">{{ rdv.statut }}</span>
                                            {% else %}
                                                <span class="badge badge-secondary">{{ rdv.statut }}</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ rdv.collecte.lieu.nomLieu }}</td>
                                        <td>{{ rdv.collecte.nom }}</td>
                                        <td>
                                            {% if rdv.statut != 'Annulé' %}
                                                <a href="{{ path('annuler_RendezVous', {'id': rdv.id}) }}"
                                                   class="btn btn-sm btn-outline-danger annuler-btn"
                                                   onclick="return confirm('Êtes-vous sûr de vouloir annuler ce rendez-vous ?')">
                                                    <i class="fas fa-times mr-1"></i>Annuler
                                                </a>
                                            {% else %}
                                                <span class="text-muted annule-text">Déjà annulé</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endblock %}

    <!-- Contact Us -->
    <footer id="contact-us">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-5 center vertical-center">
                    <img src="{{ asset('themes/imgs/logo.png') }}" class="footer-logo img-fluid img-hover">
                </div>
                <div class="col-4 col-sm-2 center">
                    <ul>
                        <li>
                            <p><a href="{{ path('Accueil') }}">Accueil</a></p>
                        </li>
                        <li>
                            <p><a href="{{ path('app_login') }}">Connexion</a></p>
                        </li>
                        <li>
                            <p><a href="#">Inscription</a></p>
                        </li>
                    </ul>
                </div>
                <div class="col-8 col-sm-5 center">
                    <ul>
                        <li>
                            <p><i class="fab fa-instagram mr-2 "></i><a href="# ">bloodbank_tn</a></p>
                        </li>
                        <li>
                            <p><i class="fab fa-facebook mr-2 "></i><a href="# ">BloodBank Tunisia</a></p>
                        </li>
                        <li>
                            <p><i class="fab fa-twitter mr-2 "></i><a href="# ">@BloodBankTN</a></p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js " integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj " crossorigin="anonymous "></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js " integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN " crossorigin="anonymous "></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js " integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV " crossorigin="anonymous "></script>
    
    <!-- Template Scripts -->
    <script src="{{ asset('themes/js/jquery.counterup.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('themes/js/jquery.waypoints.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('themes/js/wow.min.js') }}" type="text/javascript "></script>
    
    <script>
        $(function() {
            $(document).scroll(function() {
                var $nav = $("#mainNavbar ");
                $nav.toggleClass("scrolled ", $(this).scrollTop() > $nav.height());
            });
        });
        
        $('.counter').counterUp({
            delay: 10,
            time: 1000,
        });
        
        new WOW().init();
    </script>
    
    {% block javascripts %}
        <script src="{{ asset('themes/js/dashboard.js') }}" defer></script>
    {% endblock %}
</body>

</html>